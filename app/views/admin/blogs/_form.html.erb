<%= simple_form_for [:admin, @blog], defaults: { required: false}, input_html: {class: 'form-horizontal'} do |f| %>
    <%= f.input :title, autofocus: true, placeholder: 'Enter the blog title', required: true %>
    <%= f.input :description, placeholder: 'Enter a short summary not longer than 155 characters' %>
    <div class="row">
      <div class="col-md-offset-2 col-md-8">
        <p class="text-center text-success">Refresh page if the text-editor didn't load properly</p>
        <%= f.input :content, required: true, class: 'summernote' %>
      </div>
    </div>
    <%= f.input :featured %>
    <%= f.button :submit %>
<% end %>
