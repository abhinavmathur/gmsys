<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>No.</th>
    <th>Name</th>
    <th>Admin ?</th>
    <th>Options</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each_with_index do |user, index| %>
      <% if user.advisory? %>
          <tr class="info">
      <% elsif user.admin? %>
          <tr class="success">
      <% else %>
          <tr>
      <% end %>
      <td><%= index + 1 %></td>
      <td><%= link_to user.name, user_path(user)%></td>
      <td><%= user.admin? ? 'Admin' : '' %></td>
      <td><%= link_to 'View User', user_path(user), class: 'btn btn-info btn-sm' %>
        <%= link_to 'Edit User', edit_admin_user_path(user), class: 'btn btn-warning btn-sm' %>
        <%= link_to 'Delete User', admin_user_path(user), method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: 'Are you sure ?'} %>
      </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
<br>
<%= paginate @users %>